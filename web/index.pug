
head
  link(rel="stylesheet" href="css/main.css")
  link(rel="stylesheet" href="css/roboto-mono.css")
  link(rel="stylesheet" href="css/modal.css")

  title uquiz Designer

body
  input(type="file" style="display: none;" id="inputfile")
  #mainContainer
    #headContainer
      .appTitle
        | Âµquiz
      .windowTitle
        | Quiz Designer
      .controls
        .control.control-new(tabindex="0" role="button" aria-pressed="false" onkeypress="enterClickHandler(this)")
          img(src="/icon/file-document-outline.svg" alt="New")
          .caption New

        .control.control-save(tabindex="0" role="button" aria-pressed="false" onkeypress="enterClickHandler(this)")
          img(src="/icon/content-save.svg" alt="Save")
          .caption Save

        .control.control-open(tabindex="0" role="button" aria-pressed="false" onkeypress="enterClickHandler(this)")
          img(src="/icon/folder-outline.svg" alt="Open")
          .caption Open

        .control.control-upload(tabindex="0" role="button" aria-pressed="false" onkeypress="enterClickHandler(this)")
          img(src="/icon/upload.svg" alt="Upload")
          .caption Upload

    #bodyContainer
      #questionsContainer
        #sideContainer
        #controlContainer
          #addQuestion.questionControl(tabindex="0")
            img(src="/icon/plus.svg" alt="Plus")
          #removeQuestion.questionControl(tabindex="0")
            img(src="/icon/delete.svg" alt="Remove")
          #upQuestion.questionControl(tabindex="0")
            img(src="/icon/chevron-up.svg" alt="Shift up")
          #downQuestion.questionControl(tabindex="0")
            img(src="/icon/chevron-down.svg" alt="Shift down")
          #undoQuestion.questionControl(tabindex="0")
            img(src="/icon/undo.svg" alt="Undo")
          
      #contentContainer

  script(src="/eel.js")
  script(src="js/modal.js")
  script(src="js/create.js")
  script(src="js/main.js")
